{% extends "layout.njk" %}
{% block head %}
  <head>
    <title>Donuts da Lory</title>
  </head>
{% endblock %}
{%block content %}
  <div class='central'>
    <section>
      <div class='banner'>
        <div class="banner-text">
          <span>
            <h2>Os Melhores Donuts de Campos</h2>
            <p class='banner-text-p'>
              Cuidado! Donuts extremamente deliciosos. Feitos com muito amor!
            </p>
          </span>
        </div>

        <div class="banner-chefe">
          <img class="img-chef" src="image/logo.png" alt="Chefe">
        </div>
      </div>
    </section>
    <div>
      <h1 class="conteudo-title">Mais acessados</h1>
    </div>
    <section class="cards">
      {% for datas in data %}
        {% if datas.id < 7 %}
          <div class="card">
            <div class="space-card">
              <div class="card-image" id="{{datas.id}}">
                <img src="/image/{{datas.id}}.jpg" alt="">
              </div>
              <div class="card-content">
                <p class="card-info">{{datas.info}}</p>
                <p class="card-title">{{datas.title}}</p>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </section>
  </div>
  <script src="scripts.js"></script>
{% endblock %}